{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "overrides": [],
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion": "latest",
    "project": ["src/"]
  },
  "rules": {
    "no-undef": "off",
    "comma-dangle": ["error", "never"],
    "eqeqeq": ["error", "always"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  }
}
